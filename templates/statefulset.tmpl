apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: {{.Name}}
  labels:
    app.kubernetes.io/component: {{.Name}}
spec:
  replicas: {{.Replicas}}
  serviceName: {{.ServiceHeadless}}
  selector:
    matchLabels:
      app.kubernetes.io/component: {{.Name}}
  template:
    metadata:
      labels:
        app.kubernetes.io/component: {{.Name}}
    spec:
      containers:
      - name: {{.Name}}
        image: {{.Image}}
        ports:
        - containerPort: {{.PortInt}}
        volumeMounts:
        - mountPath: {{.MountPath}}
          name: {{.VolMountName}}
      volumes:
      - name: {{.VolMountName}}
        persistentVolumeClaim:
          claimName: {{.PVCName}}
