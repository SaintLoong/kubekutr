apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ .Name }}
  {{- if .Labels}}
  labels:
    {{- range .Labels}}
    {{.Label}}
    {{- end}}
  {{- end}}
spec:
  replicas: {{.Replicas}}
  selector:
    matchLabels:
      {{- range .Labels}}
      {{.Label}}
      {{- end}}
  template:
    metadata:
      labels:
        {{- range .Labels}}
        {{.Label}}
        {{- end}}
    spec:
      containers:
      {{- range .Containers}}
        - name: {{.Name}}
          image: {{.Image}}
          {{- if .Command}}
          command: {{.Command}}
          {{- end}}
          {{- if .Args}}
          args: {{.Args}}
          {{- end}}
          {{- if .PortInt}}
          ports:
          - containerPort: {{.PortInt}}
            name: {{.PortName}}
          {{- end}}
          {{- if .EnvSecret}}
          envFrom:
          - secretRef:
              name: {{.EnvSecret}}
          {{- end}}
          {{- if .EnvVars}}
          env:
          {{- range .EnvVars}}
          - name: {{.EnvVars.Name}}
            value: {{.EnvVars.Value}}
          {{- end}}
          {{- end}}
      {{- end}}